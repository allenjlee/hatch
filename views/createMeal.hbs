<!DOCTYPE html>

<!-- Create a meal and add it to the database -->

<html>
<head>
    <!-- Bootstrap -->
    <link href = "/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato|Libre+Baskerville|Libre+Franklin|Pacifico" rel="stylesheet">
    
    <!-- CSS Plugin -->
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">

    <!-- Theme CSS -->
    <link href = "/stylesheets/style.css" rel="stylesheet">
    <link href = "/stylesheets/createMeal.css" rel = "stylesheet">

    <!--Jquery Plugin-->
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    
    
</head>

<body id="page-top" data-spy = "scroll" data-target=".navbar-fixed-top">

    <!-- Navbar -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand page-scroll" href="/">
                    <span><img src="/img/logo.png" width=25 height=25></span> Hatch
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <li class="fake">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="/browse">Browse</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="/profile">Your Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="my-container">
        <div class="inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 text">
                        <h1>Hatch A Meal</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class = "container">
        <div class="make-smaller">
            <div class="row">
                <div class="food-application">
                    <div class="form-group">
                        <label for="mealName">Title:</label>
                        <input type="text" class="form-control mealName-add" name="mealName"  placeholder="Allen's Meal">
                    </div>
                    <div class="form-group">
                        <label for="mealDay">Date:</label>
                        <input type="text" class="form-control mealDay-add" name="mealDay"  placeholder="January 19, 2017">
                    </div>
                    <div class="form-group">
                        <label for="mealType">Type:</label>
                        <input type="text" class="form-control mealType-add" name="mealType"  placeholder="Breakfast, Lunch, Dinner">
                    </div>
                    <div class="form-group">
                        <label for="mealStyle">Style:</label>
                        <input type="text" class="form-control mealStyle-add" name="mealStyle"  placeholder="Mexican, Vegan, Asian">
                    </div>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" class="form-control location-add" name="location"  placeholder="Dorm Name">
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control description-add" name="description" rows="3" placeholder="I'm making asian stir-fry with chicken and bokchoy."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="img">Upload An Image:</label>
                        <input type="file" id="img_meal_upload" class="form-control-file img-add" name = "img" aria-describedby="fileHelp">
                        <small id="fileHelp" class="form-text text-muted">Please submit only .jpg files.</small>
                    </div>
                    <button class="add-submit btn btn-outline btn-xl page-scroll">Submit</button>
                </div>
            </div>
        </div>
    </div>
    
     <!-- jQuery -->
    <script src="jquery/jquery.js"></script>
    <script src="js/ajax.js"></script>


    <!-- Theme JavaScript -->
    <script src="js/hatch.js"></script>

    <!-- Icon made by Freepik from www.flaticon.com -->

</body>
</html>



